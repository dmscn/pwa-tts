---
import TextToSpeech from '../components/TextToSpeech.jsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>AI Natural Voice Generator</title>
		<script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
		<link href="/src/styles.css" rel="stylesheet">
	</head>
	<body class="bg-gray-50 flex items-center justify-center min-h-screen">
		<div class="max-w-2xl w-full bg-white shadow-lg rounded-lg p-8">
			<h1 class="text-4xl font-extrabold text-center text-gray-800 mb-6">AI Natural Voice Generator</h1>
			<p class="text-center text-gray-600 mb-4">Convert your text into natural-sounding speech with ease.</p>
			<TextToSpeech client:load />
		</div>
	</body>
</html>
