---
import TextToSpeech from '../components/TextToSpeech';
import DarkModeToggle from '../components/DarkModeToggle';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>AI Voice Generator</title>
	</head>
	<body class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
		<div class="container mx-auto px-4 py-8">
			<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
				<h1 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-2">
					AI Natural Voice Generator
				</h1>
				<p class="text-center text-gray-600 dark:text-gray-400 mb-6">
					Convert your text into natural-sounding speech with ease.
				</p>
				<TextToSpeech client:load />
			</div>
			<DarkModeToggle client:load />
		</div>
	</body>
</html>
